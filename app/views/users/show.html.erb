<% provide(:title, @user.name) %>

<div class="row">
  <aside class="span4">
    <section>
    <h1>
      <%= gravatar_for @user %>
      <%= twitter_style @user %>
    </h1>
    </section>
  </aside>
  <div class="span8">
     <% if @user.microposts.any?  %>
       <h3> Micropost (<%= @user.microposts.count %>)</h3>
       <ol class="microposts">
            <!-- looks for micropost partial -->
           <%= render @microposts  %>
       </ol>
       <%= will_paginate @microposts %>
     <% end %>
  </div>
</div>
